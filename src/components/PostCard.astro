---
const { title, url, pubDate, description, tags, image } = Astro.props;
import "../styles/global.css";
---

<a class="card" href={url}>
  <div class="card-content">
    <div class="text-content">
      <div class="title-with-bar">
        <div class="vertical-bar"></div>
        <p id="title">{title}</p>
      </div>
      <div class="date">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon"
          ><path d="M8 2v4"></path><path d="M16 2v4"></path><rect
            width="18"
            height="18"
            x="3"
            y="4"
            rx="2"></rect><path d="M3 10h18"></path></svg
        >

        <p id="pdate">Published: {pubDate}</p>
      </div>
      <p>{description}</p>
    </div>
    <img src={image.url} alt={image.alt} class="thumbnail" />
  </div>
</a>

<style>
  /* TODO: inconify the tag, date */
  .icon {
    background-color: yellowgreen;
    border-radius: 2px;
  }
  .date {
    display: inline-flex;
  }

  /* --- Vertical bar next to title --- */
  .vertical-bar {
    width: 3px;
    height: 1.5em;
    background-color: limegreen; /* Make this visible */
    border-radius: 3px;
    margin-right: 0.5rem;
    flex-shrink: 0;
  }

  .title-with-bar {
    display: flex;
    align-items: center;
    margin-bottom: 0.5em;
  }

  #title {
    font-size: 20px;
    color: var(--text-color);
    text-decoration: underline;
    margin: 0;
  }

  #pdate {
    font-style: italic;
    color: gray;
    margin-bottom: 0.5em;
  }

  /* --- Card Styles --- */
  .card {
    border: 1px solid var(--hamburger-border);
    background-color: #23202a;
    border-radius: 10px;
    overflow: hidden;
    display: block;
    transition: transform 0.2s ease;
    margin-top: 9px;
    text-decoration: none;
    color: inherit;
  }

  .card:hover {
    transform: scale(1.02);
  }

  .card-content {
    display: flex;
    align-items: center;
    gap: 1em;
  }

  .thumbnail {
    clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 10% 100%);
    width: 40%;
    object-fit: cover;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    flex-shrink: 0;
    max-width: 300px;
  }

  .text-content {
    flex: 1;
    padding: 1em;
    display: flex;
    flex-direction: column;
    color: var(--text-color);
    justify-content: center;
  }

  p {
    margin: 0;
  }

  /* --- Responsive tweaks --- */
  @media (max-width: 600px) {
    .card-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .thumbnail {
      width: 90%;
      max-width: 280px;
      height: auto;
      aspect-ratio: auto;
      border-radius: 6px;
    }

    .text-content {
      align-items: center;
    }

    .title-with-bar {
      justify-content: center;
    }

    #title {
      font-size: 1.1em;
    }
  }
</style>
