---
import "../styles/global.css";
import FormattedDate from "./FormattedDate.astro";
const { title, url, pubDate, description, tags, image } = Astro.props;
---

<!-- put layer over the image -->
<a class="card" href={url}>
  <div class="card-content">
    <div class="text-content">
      <div class="title-with-bar">
        <div class="vertical-bar"></div>
        <p id="title">{title}</p>
      </div>
      <p>{description}</p>
      <div class="taggy">
        {
          tags
            .slice(0, 3)
            .map((tag) => <p class="tag-item info-text">#{tag}</p>)
        }
      </div>
    </div>
    <div class="image-container">
      <img src={image.url} alt={image.alt} class="thumbnail" />
      <div class="date-overlay">
        <div class="info-text">
          <FormattedDate date={new Date(pubDate)} />
        </div>
      </div>
    </div>
  </div>
</a>

<style>
  .taggy {
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
    margin-top: 5px;
  }

  .taggy .tag-item {
    border: 1px solid var(--hamburger-border);
    border-radius: 5px;
    padding: 2px 5px;
    white-space: nowrap;
    font-size: 0.9rem;
  }
  /* TODO: inconify the tag, date */
  .icon {
    background-color: var(--mode-button-bg);
    color: var(--background-color);
    border-radius: 7px;
    margin: 10px 10px 10px 0;
    padding: 3px;
    width: 30px;
    height: 30px;
  }

  .extra {
    margin-left: 10px;
  }

  .arrow {
    width: 30px;
    height: 30px;
    stroke-width: 2.2; /* optional: slightly thicker lines */
    stroke: var(--mode-button-bg);
  }
  .date {
    display: inline-flex;
    /* still not aligned */
    align-items: center;
  }
  .info-text {
    color: var(--nav-fg);
    font-size: 1rem;
    font-family: "JetBrains Mono";
  }

  .tags-container {
    display: flex;
    align-items: center; /* vertically center the image and tags */
    gap: 0.5em; /* space between image and tags */
  }
  .tag-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }
  .tags {
    display: flex;
    align-items: center; /* vertically center the image and tags */
    gap: 0.5em; /* space between image and tags */
  }

  /* --- Vertical bar next to title --- */
  .vertical-bar {
    width: 3px;
    background-color: var(--mode-button-bg); /* Make this visible */
    border-radius: 2px;
    margin-right: 0.1rem;
    flex-shrink: 0;
    align-self: stretch;
  }

  .title-with-bar {
    display: flex;
    align-items: center;
    margin-bottom: 0.5em;
    gap: 0.5em; /* Adds space between icon and text */
    margin-bottom: 0.5em;
  }

  #title {
    font-size: 1.4rem;
    color: var(--text-color);
    text-decoration: underline;
    margin: 0;
  }

  .cards {
  }

  /* --- Card Styles --- */
  .card {
    background-color: var(--buble);
    border-radius: 10px;
    overflow: hidden;
    display: block;
    transition: transform 0.2s ease;
    margin-top: 9px;
    text-decoration: none;
    color: inherit;
    height: 100%; /* Make card fill the wrapper height */
  }

  .card:hover {
    transform: scale(1.02);
  }

  .card-content {
    display: flex;
    align-items: center;
    gap: 1em;
  }

  .thumbnail {
    width: 40%;
    padding: 10px;
    border-radius: 20px;
    aspect-ratio: 16 / 9;
    flex-shrink: 0;
    max-width: 300px;
  }

  .thumbnail:hover {
    filter: brightness(0.7); /* Darkens the image slightly */
  }

  .image-container {
    position: relative;
    width: 100%; /* Ensure it takes full width */
    order: -1; /* Keep image at the top */
  }

  .date-overlay {
    position: absolute;
    bottom: 10px;
    left: 10px;
    background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent background */
    color: white;
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 0.9em;
    z-index: 10; /* Ensure it's above the image */
    width: fit-content;
  }

  .date-overlay .info-text {
    color: white; /* Override info-text color for visibility */
    font-size: 0.8em;
  }

  .text-content {
    flex: 1;
    padding: 1em;
    display: flex;
    flex-direction: column;
    color: var(--text-color);
    justify-content: center;
  }

  p {
    margin: 0;
  }

  .card-content {
    flex-direction: column; /* Always stacked */
    align-items: flex-start; /* Align content to the left */
    text-align: left;
  }

  .thumbnail {
    width: 100%; /* Always full width */
    max-width: none; /* Remove max-width constraint */
    height: auto;
    aspect-ratio: auto;
    border-radius: 6px; /* Use mobile border-radius */
    padding: 0;
    order: -1; /* Always move image to the top */
  }

  .text-content {
    align-items: flex-start; /* Always align text content to the left */
    padding: 1em;
  }

  .title-with-bar {
    justify-content: flex-start; /* Always align title to the left */
  }

  #title {
    font-size: 1.2em; /* Use mobile font size for title */
  }

  .cards {
    width: 100%; /* Always ensure date/tags take full width */
    justify-content: flex-start; /* Always align date/tags to the left */
  }
</style>
