---
import "../styles/global.css";
import FormattedDate from "./FormattedDate.astro";
const { title, url, pubDate, description, tags, image } = Astro.props;
---

<!-- put layer over the image -->
<a class="card" href={url}>
  <div class="card-content">
    <div class="text-content">
      <div class="title-with-bar">
        <div class="vertical-bar"></div>
        <p id="title">{title}</p>
      </div>
      <div class="cards">
        <div class="date">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon"
            ><path d="M8 2v4"></path><path d="M16 2v4"></path><rect
              width="18"
              height="18"
              x="3"
              y="4"
              rx="2"></rect><path d="M3 10h18"></path><path d="M8 14h.01"
            ></path><path d="M12 14h.01"></path><path d="M16 14h.01"
            ></path><path d="M8 18h.01"></path><path d="M12 18h.01"></path><path
              d="M16 18h.01"></path></svg
          >

          <div class="info-text">
            <FormattedDate date={new Date(pubDate)} />
          </div>
        </div>
        <div class="date">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="icon"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="m15 5 6.3 6.3a2.4 2.4 0 0 1 0 3.4L17 19"></path>
            <path
              d="M9.586 5.586A2 2 0 0 0 8.172 5H3a1 1 0 0 0-1 1v5.172a2 2 0 0 0 .586 1.414L8.29 18.29a2.426 2.426 0 0 0 3.42 0l3.58-3.58a2.426 2.426 0 0 0 0-3.42z"
            ></path>
            <circle cx="6.5" cy="9.5" r=".5" fill="currentColor"></circle>
          </svg>
          <!-- <div class:list={["tags", "info-text"]}> -->
          <!--   {tags.map((tag) => <p>#{tag}</p>)} -->
          <!-- </div> -->
          <p class="info-text">{tags[0]}</p>
        </div>
      </div>
      <p>{description}</p>
    </div>
    <img src={image.url} alt={image.alt} class="thumbnail" />
  </div>
</a>

<style>
  /* TODO: inconify the tag, date */
  .icon {
    background-color: var(--mode-button-bg);
    color: var(--background-color);
    border-radius: 7px;
    margin: 10px;
    padding: 5px;
    width: 35px;
    height: 35px;
  }
  .date {
    display: inline-flex;
    /* still not aligned */
    align-items: center;
    gap: 0.1em;
  }
  .info-text {
    color: var(--hamburger-border);
    font-size: 1.1rem;
  }

  .tags-container {
    display: flex;
    align-items: center; /* vertically center the image and tags */
    gap: 0.5em; /* space between image and tags */
  }
  .tag-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }
  .tags {
    display: flex;
    align-items: center; /* vertically center the image and tags */
    gap: 0.5em; /* space between image and tags */
  }

  /* --- Vertical bar next to title --- */
  .vertical-bar {
    width: 3px;
    height: 1.5em;
    background-color: limegreen; /* Make this visible */
    border-radius: 3px;
    margin-right: 0.5rem;
    flex-shrink: 0;
  }

  .title-with-bar {
    display: flex;
    align-items: center;
    margin-bottom: 0.5em;
    gap: 0.5em; /* Adds space between icon and text */
    margin-bottom: 0.5em;
  }

  #title {
    font-size: 20px;
    color: var(--text-color);
    text-decoration: underline;
    margin: 0;
  }

  .cards {
    margin-left: 10px;
  }

  /* --- Card Styles --- */
  .card {
    border: 1px solid var(--hamburger-border);
    background-color: #23202a;
    border-radius: 10px;
    overflow: hidden;
    display: block;
    transition: transform 0.2s ease;
    margin-top: 9px;
    text-decoration: none;
    color: inherit;
  }

  .card:hover {
    transform: scale(1.02);
  }

  .card-content {
    display: flex;
    align-items: center;
    gap: 1em;
  }

  .thumbnail {
    clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 10% 100%);
    width: 40%;
    object-fit: cover;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    flex-shrink: 0;
    max-width: 300px;
  }

  .text-content {
    flex: 1;
    padding: 1em;
    display: flex;
    flex-direction: column;
    color: var(--text-color);
    justify-content: center;
  }

  p {
    margin: 0;
  }

  /* --- Responsive tweaks --- */
  @media (max-width: 600px) {
    .card-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .thumbnail {
      width: 90%;
      max-width: 280px;
      height: auto;
      aspect-ratio: auto;
      border-radius: 6px;
    }

    .text-content {
      align-items: center;
    }

    .title-with-bar {
      justify-content: center;
    }

    #title {
      font-size: 1.1em;
    }
  }
</style>
