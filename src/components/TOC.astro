---
import type { MarkdownHeading } from "astro";

interface Props {
  headings: MarkdownHeading[];
}

const { headings = [] } = Astro.props;
---

<nav class="toc">
  <ul>
    {
      headings
        .filter(({ depth }) => depth >= 1 && depth <= 2)
        .map((heading) => (
          <li class={`depth-${heading.depth}`}>
            <a href={`#${heading.slug}`}>{heading.text}</a>
          </li>
        ))
    }
  </ul>
</nav>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    const tocLinks = Array.from(document.querySelectorAll(".toc a"));
    const headings = tocLinks
      .map((link) => {
        const id = link.getAttribute("href")?.slice(1);
        const el = document.getElementById(id);
        return el ? { id, element: el } : null;
      })
      .filter(Boolean);

    function onScroll() {
      let currentId = null;
      let minDistance = Number.POSITIVE_INFINITY;

      headings.forEach(({ id, element }) => {
        const rect = element.getBoundingClientRect();
        if (rect.top >= 0 && rect.top < minDistance) {
          minDistance = rect.top;
          currentId = id;
        }
      });

      document
        .querySelectorAll(".toc li")
        .forEach((li) => li.classList.remove("active"));

      if (currentId) {
        const activeLink = document.querySelector(
          `.toc a[href="#${currentId}"]`,
        );
        if (activeLink) {
          activeLink.parentElement.classList.add("active");
        }
      }
    }

    window.addEventListener("scroll", onScroll, { passive: true });
    onScroll(); // call once on page load
  });
</script>

<style>
  .toc li.active > a {
    color: var(--mode-button-bg); /* or your preferred highlight color */
    font-weight: bold;
    border-left: 2px solid var(--mode-button-bg);
    padding-left: 6px;
  }
</style>

<style>
  html {
    scroll-behavior: smooth;
  }

  .toc {
    display: block;
    padding: 1rem;
    border-left: 1px solid var(--border-muted);
    background-color: transparent;
    max-height: 80vh;
    overflow-y: auto;
  }

  .toc::-webkit-scrollbar {
    width: 3px;
  }

  .toc::-webkit-scrollbar-track {
    background: transparent;
    /* Removed border-radius to remove rounded corners */
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .toc::-webkit-scrollbar-thumb {
    background-color: var(--border-muted);
    border-radius: 4px;
  }

  .toc::-webkit-scrollbar-thumb:hover {
    background-color: var(--h1-color);
  }

  .toc .depth-1 a {
    font-weight: bold;
    color: var(--text-muted);
  }

  .toc .depth-2 a {
    color: var(--text-muted);
  }

  .toc ul {
    list-style: none;
    padding: 0;
  }

  .toc li {
    margin-bottom: 0.5rem;
  }

  .toc a {
    text-decoration: none;
    color: var(--text);
    transition: color 0.2s ease-in-out;
    display: block;
    padding: 0.2em 0;
  }

  .toc a:hover {
    color: var(--mode-button-bg);
  }

  .toc .depth-2 {
    margin-left: 1rem;
    font-size: 0.9em;
  }
</style>
