---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404 Not Found">
  <main class="flex flex-col items-center justify-center min-h-[calc(100vh-var(--header-height)-var(--footer-height))]">
    <h1 class="text-9xl font-bold text-primary-dark dark:text-primary-light">404</h1>
    <p class="text-2xl mt-4">Page Not Found</p>
    <p class="mt-2 text-lg text-center">
      The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
    </p>
    <a href="/" class="mt-8 px-6 py-3 bg-accent text-white rounded-lg hover:bg-accent-dark transition-colors duration-300">
      Go to Homepage
    </a>
  </main>
</BaseLayout>
